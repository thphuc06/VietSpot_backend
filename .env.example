# VietSpot Backend - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=VietSpot API
APP_VERSION=1.0.0
DEBUG=False

# Supabase (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-or-service-role-key
SUPABASE_BUCKET=images

# Database (Supabase PostgreSQL) - Optional if only using Supabase client
# Format: postgresql+asyncpg://user:password@host:port/database
# DATABASE_URL=postgresql+asyncpg://user:password@db.xxxxx.supabase.co:5432/postgres

# Google Cloud Credentials (REQUIRED for Gemini AI and Text-to-Speech)
# For local development: Set GOOGLE_APPLICATION_CREDENTIALS to path of JSON file
# For Railway/Cloud deployment: Paste the entire service account JSON as a single line
# Example: GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}
GOOGLE_CREDENTIALS_JSON=

# Google Gemini (Legacy API Key - kept for fallback)
GEMINI_API_KEY=your-gemini-api-key

# Vertex AI Configuration (for Gemini 2.0)
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=global
VERTEX_MODEL_ID=gemini-2.0-flash-exp

# OpenWeather API (for weather data)
OPENWEATHER_API_KEY=your-openweather-api-key

# HuggingFace (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Search Configuration
DEFAULT_NEARBY_RADIUS_KM=10.0
DEFAULT_NEARBY_RADIUS_KM_SHORT=2.0
TOP_N_SEMANTIC_RESULTS=20
TOP_K_FINAL_RESULTS=10

# Scoring Weights (must sum to 1.0)
WEIGHT_SEMANTIC=0.5
WEIGHT_DISTANCE=0.2
WEIGHT_RATING=0.2
WEIGHT_POPULARITY=0.1

# Model Configuration
EMBEDDING_MODEL=dangvantuan/vietnamese-embedding

# CORS Origins (comma-separated)
# CORS_ORIGINS=["http://localhost:3000", "https://your-frontend.com"]

# API
API_V1_PREFIX=/api
